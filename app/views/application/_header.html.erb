<header class="contain-to-grid  headergap">
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Heal App</a></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">




        <% if user_signed_in? %>
          <% if current_user.image.present? %>

            <li><%= image_tag(current_user.image) %></li> 
            
          <% end %>


            <% if current_user.role == "doctor" %>

              <li><%= link_to "My Cases (active)", cases_as_doctor_path %></li> 
              <li><%= link_to "Unnassigned", unassigned_path %></li> 
              <li>
                <%= link_to "Pending", doctor_pending_treatments_path, class: "nav-link" %>
              </li>
              
            <% end %>
            <% if current_user.role == "patient" %>
            <li>
              <%= link_to "Pending", pending_treatments_path, class: "nav-link" %>
            </li>

              <li><%= link_to "My Cases (patient)", cases_as_patient_path %></li> 
              
            <% end %>
            <% if current_user.role == "admin" %>
              <li><%= link_to "List Cases", consultations_path, class: "nav-link" %></li>
              <li><%= link_to "Doctor cases", cases_as_doctor_path %></li> 
              <li><%= link_to "Patient cases", cases_as_patient_path %></li> 
              
            <% end %>

          <li class="dropdownicon"><a href="#" data-dropdown="hover1" data-options="is_hover:true; hover_timeout:5000">Users</a></li>

          <ul id="hover1" class="f-dropdown" data-dropdown-content>
            <li>
            <%= link_to "Users", users_path %>
            </li> 
            <li>
            <%= link_to "Doctors", doctors_path %>
            </li> 
          </ul>

          

          

         

          <li class="nav-item">
            <%= link_to "Inbox", inbox_path, class: "nav-link" %>
          </li>
          <li>
            <%= link_to "Outbox", outbox_path, class: "nav-link" %>
          </li>

          
          <li>
            <%= link_to "Add Case", new_consultation_path, class: "nav-link" %>
          </li>
          <li>
          <%= link_to current_user.name, current_user %>
          </li>

          <li>
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
          </li> 
      
        <% else %>

          <li><%= link_to "Join Us!", new_user_registration_path %></li>
          <li><%= link_to "Login", new_user_session_path %></li>

        <% end %>
      </ul>
    </section>
  </nav>
</header>








