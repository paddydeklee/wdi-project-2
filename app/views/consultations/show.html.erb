<h1>Check Consultations</h1>
<div class="card-deck-wrapper">
  <div class="card-deck">
    <%= render @consultation %>
    <%= link_to "Heal", new_consultation_treatment_path(@consultation), class: "btn-btn-primary" %>
    <div class="medium-9 columns comments_form">
      <%= render partial: 'comments/form', locals: { commentable: @consultation } %>
      
        <%= render partial: 'comments/comment', collection: @comments, locals: { commentable: @consultation } %>

    </div>
  </div>
</div>