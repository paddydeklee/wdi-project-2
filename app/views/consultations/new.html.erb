<h1>How can we help</h1>
<%= form_for @consultation do |f| %>
  <% if @consultation.errors.any? %>
    <% for message in @consultation.errors.full_messages %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <fieldset class="form-group">
    <%= f.label :type_of %>
    <%= f.select(:type_of, ['Ortho', 'Cardio','Respiratory', 'Other'])%>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :brief %>
    <%= f.text_area :brief, class: "form-control" %>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image, class: "form-control" %>
  </fieldset>
  
  <%= f.submit class: "btn btn-primary accept-btn" %>

<% end %>
